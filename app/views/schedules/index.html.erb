<% title "Schedules" %>

<h1><%= yield(:title) %></h1>

<br>

<%= link_to 'Days', days_path %>
| <%= link_to 'Departments', departments_path %>
| <%= link_to 'Sections', sections_path %>
| <%= link_to 'Subjects', subjects_path %>
| <%= link_to 'Professors', professors_path %>
| <%= link_to 'Rooms', rooms_path %>

<br><br>

<%= link_to 'New Schedule', new_schedule_path %>




<table id="box-table-a" >
  <thead>
    <tr>
      <th>Professor</th>
      <th>SubCode</th>
      <th>Day</th>
      <th>Time</th>
      <th>Room</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.professor.procon %></td>
        <td><%= schedule.subject.name %>
        <%= schedule.section.seccon %></td>
        <td><%= schedule.day.name %></td>
        <td><%= schedule.tcon %></td>
        <td><%= schedule.room.name %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

